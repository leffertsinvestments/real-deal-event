---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <style>
    body,
    html {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: #fff;
      color: #000;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
    }

    #app {
      width: 90%;
      max-width: 600px;
      text-align: center;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    input,
    select {
      padding: 0.8rem;
      border: 1px solid #000;
      border-radius: 4px;
      font-size: 1rem;
      background: #fff;
      color: #000;
      outline: none;
      transition: all 0.3s ease;
    }

    button {
      padding: 0.8rem;
      background-color: #fff;
      color: #000;
      border: 1px solid #000;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    button:hover {
      background-color: #000;
      color: #fff;
    }

    .project-prompt {
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
      font-weight: bold;
    }

    .projects {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
    }

    .project-option {
      cursor: pointer;
      width: 120px;
      text-align: center;
      position: relative;
    }

    .project-image-container {
      border: 2px solid #000;
      border-radius: 8px;
      overflow: hidden;
      width: 100%;
      height: 100px;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #fff;
      position: relative;
      flex-direction: column;
    }

    .project-image-container img.main-image {
      width: 100%;
      height: 60%;
      object-fit: cover;
      display: block;
    }

    .project-image-container img.logo {
      width: 40px;
      height: 40px;
      object-fit: contain;
      margin-bottom: 4px;
    }

    /* Overlay for selection */
    .project-overlay {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.5);
      opacity: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: opacity 0.3s ease;
    }

    .project-overlay svg {
      width: 30px;
      height: 30px;
      stroke: #fff;
      stroke-width: 3;
      fill: none;
    }

    .project-image-container.selected .project-overlay {
      opacity: 1;
    }

    .project-option-label {
      margin-top: 0.3rem;
      font-size: 1rem;
      font-weight: bold;
      color: #000;
    }

    .all-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 60px);
      gap: 2px;
      width: 100%;
      height: 100%;
    }

    .all-grid img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .hidden {
      display: none;
    }

    .fade-in {
      animation: fadeIn 1s forwards;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    #thank-you {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    #qr-code img {
      width: 200px;
      height: 200px;
      margin-top: 1rem;
    }
  </style>

  <div id="app">
    <form id="submission-form">
      <input type="text" name="name" placeholder="Name" required />
      <input type="email" name="email" placeholder="Email" required />
      <input type="tel" name="phone" placeholder="Phone #" required />

      <div class="project-prompt">
        Please select the project you are most interested in:
      </div>

      <div class="projects">
        <!-- 72 Park -->
        <div class="project-option" data-value="72 Park">
          <div class="project-image-container">
            <img class="logo" src="/images/72p-logo.svg" alt="72 Park Logo" />
            <img class="main-image" src="/images/72-park.jpg" alt="72 Park" />
            <div class="project-overlay">
              <svg viewBox="0 0 24 24">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
          </div>
          <div class="project-option-label">72 Park</div>
        </div>

        <!-- Palma -->
        <div class="project-option" data-value="Palma">
          <div class="project-image-container">
            <img class="logo" src="/images/palma-logo.png" alt="Palma Logo" />
            <img class="main-image" src="/images/palma.jpg" alt="Palma" />
            <div class="project-overlay">
              <svg viewBox="0 0 24 24">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
          </div>
          <div class="project-option-label">Palma</div>
        </div>

        <!-- 72 Carlyle -->
        <div class="project-option" data-value="72 Carlyle">
          <div class="project-image-container">
            <img class="logo" src="/images/72c-logo.png" alt="72 Carlyle Logo" />
            <img class="main-image" src="/images/72-carlyle.jpg" alt="72 Carlyle" />
            <div class="project-overlay">
              <svg viewBox="0 0 24 24">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
          </div>
          <div class="project-option-label">72 Carlyle</div>
        </div>

        <!-- Future Project -->
        <div class="project-option" data-value="Future Project">
          <div class="project-image-container">
            <img class="logo" src="/images/lefferts.png" alt="Future Project Logo" />
            <img class="main-image" src="/images/11th.jpg" alt="Future Project" />
            <div class="project-overlay">
              <svg viewBox="0 0 24 24">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
          </div>
          <div class="project-option-label">Future Project</div>
        </div>

        <!-- All -->
        <div class="project-option" data-value="All">
          <div class="project-image-container">
            <div class="all-grid">
              <img src="/images/72-park.jpg" alt="72 Park" />
              <img src="/images/palma.jpg" alt="Palma" />
              <img src="/images/72-carlyle.jpg" alt="72 Carlyle" />
              <img src="/images/11th.jpg" alt="Future Project" />
            </div>
            <div class="project-overlay">
              <svg viewBox="0 0 24 24">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
          </div>
          <div class="project-option-label">All</div>
        </div>
      </div>

      <input type="hidden" name="favorite_project" id="favorite_project" />
      <button type="submit">Submit</button>
    </form>

    <div id="thank-you" class="hidden fade-in">
      Thank you for your submission!
    </div>

    <div id="qr-code" class="hidden fade-in">
      <p>Follow us on Instagram!</p>
      <img
        src="https://storage2.me-qr.com/qr/268971104.png?v=1761774405"
        alt="Instagram QR Code"
      />
    </div>
  </div>

  <script>
    const form = document.getElementById("submission-form");
    const thankYou = document.getElementById("thank-you");
    const qr = document.getElementById("qr-code");
    const projectOptions = document.querySelectorAll(".project-option");
    const favoriteProjectInput = document.getElementById("favorite_project");

    let selectedProject = null;

    projectOptions.forEach((option) => {
      option.addEventListener("click", () => {
        selectedProject = option.getAttribute("data-value");
        favoriteProjectInput.value = selectedProject;
        projectOptions.forEach((o) =>
          o.querySelector(".project-image-container").classList.remove("selected")
        );
        option.querySelector(".project-image-container").classList.add("selected");
      });
    });

    form.addEventListener("submit", (e) => {
      e.preventDefault();

      if (!selectedProject) {
        alert("Please select a favorite project.");
        return;
      }

      form.style.display = "none";
      thankYou.classList.remove("hidden");

      setTimeout(() => {
        thankYou.style.display = "none";
        qr.classList.remove("hidden");

        setTimeout(() => {
          window.location.reload();
        }, 8000);
      }, 1500);
    });
  </script>
</Layout>
