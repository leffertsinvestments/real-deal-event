---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <style>
    @font-face {
      font-family: "hudson";
      src: url("/fonts/hudson.ttf") format("truetype");
      font-weight: normal;
      font-style: normal;
    }
    @font-face {
      font-family: "neue";
      src: url("/fonts/neue-m.ttf") format("truetype");
      font-weight: normal;
      font-style: normal;
    }

    body,
    html {
      margin: 0;
      padding: 0;
      font-family: "neue", sans-serif;
      background: #fff;
      color: #000;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      overflow-y: auto;
    }

    #app {
      width: 90%;
      max-width: 650px;
      text-align: center;
      padding: 1rem;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
      margin-bottom: 2rem;
      align-items: center;
    }

    .form-logo {
      width: 140px;
      height: auto;
      margin-bottom: 1.5rem;
    }

    input,
    select {
      padding: 1rem;
      border: 1px solid #000;
      font-size: 1.1rem;
      background: #fff;
      color: #000;
      outline: none;
      transition:
        border-color 0.2s ease,
        box-shadow 0.2s ease;
      width: 100%;
      max-width: 450px;
    }

    input:focus,
    select:focus {
      border-color: #555;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
    }

    button {
      padding: 1rem;
      background-color: #fff;
      color: #000;
      border: 2px solid #000;
      font-size: 1.1rem;
      cursor: pointer;
      transition:
        background-color 0.3s ease,
        color 0.3s ease;
      max-width: 450px;
      width: 100%;
    }

    button:hover {
      background-color: #000;
      color: #fff;
    }

    .project-prompt {
      font-size: 1.2rem;
      margin-bottom: 0.8rem;
    }

    .projects {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
    }

    .project-option {
      cursor: pointer;
      width: 130px;
      text-align: center;
      position: relative;
      will-change: transform;
      transition: transform 0.3s ease-in-out;
    }

    .project-image-container {
      border: 2px solid #000;
      border-radius: 10px;
      overflow: hidden;
      width: 100%;
      height: 110px;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #fff;
      position: relative;
      flex-direction: column;
      will-change: transform;
      transition: transform 0.3s ease-in-out;
    }

    .project-image-container:hover {
      transform: translateY(-4px);
    }

    .project-image-container img.main-image {
      width: 100%;
      height: 65%;
      object-fit: cover;
      display: block;
      border-bottom: 1px solid #ddd;
    }

    .project-image-container img.logo {
      width: 45px;
      height: 45px;
      object-fit: contain;
    }

    .project-overlay {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.4);
      opacity: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: opacity 0.3s ease;
      border-radius: 10px;
      will-change: opacity;
      pointer-events: none;
    }

    .project-overlay svg {
      width: 32px;
      height: 32px;
      stroke: #fff;
      stroke-width: 3;
      fill: none;
    }

    .project-image-container.selected .project-overlay {
      opacity: 1;
    }

    .project-option-label {
      margin-top: 0.4rem;
      font-size: 1rem;
      color: #000;
    }

    .all-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 60px);
      gap: 3px;
      width: 100%;
      height: 100%;
    }

    .all-grid img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .hidden {
      display: none !important;
    }

    .fade-in {
      animation: fadeIn 1s forwards;
      transform: translateZ(0);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    #thank-you {
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
    }

    #qr-code img {
      width: 220px;
      height: 220px;
      margin-top: 1rem;
    }

    @media (max-width: 1024px) {
      #app {
        padding: 2rem;
      }
      .projects {
        gap: 1.5rem;
      }
      .project-option {
        width: 140px;
      }
      input,
      select,
      button {
        font-size: 1.15rem;
        max-width: 100%;
      }
      #thank-you {
        font-size: 2rem;
      }
      #qr-code img {
        width: 240px;
        height: 240px;
      }
    }

    @media (max-width: 768px) {
      .projects {
        flex-wrap: wrap;
        gap: 0.8rem;
        justify-content: center;
      }
      .project-option {
        width: calc(50% - 0.5rem);
        max-width: 140px;
      }
    }

    @media (max-width: 480px) {
      .project-option {
        width: 100%;
        max-width: 200px;
      }
    }
  </style>

  <div id="app">
    <form id="submission-form">
      <img class="form-logo" src="/images/lefferts.png" alt="Lefferts Logo" />

      <input type="text" name="name" placeholder="Name" required />
      <input type="email" name="email" placeholder="Email" required />
      <input type="tel" name="phone" placeholder="Phone Number" required />

      <div class="project-prompt">
        Please select the project you are most interested in:
      </div>

      <div class="projects">
        <!-- 72 Park -->
        <div class="project-option" data-value="72 Park">
          <div class="project-image-container">
            <img class="logo" src="/images/72p-logo.svg" alt="72 Park Logo" />
            <img class="main-image" src="/images/72-park.jpg" alt="72 Park" />
            <div class="project-overlay">
              <svg viewBox="0 0 24 24"
                ><polyline points="20 6 9 17 4 12"></polyline></svg
              >
            </div>
          </div>
          <div class="project-option-label">72 Park</div>
        </div>

        <!-- Palma -->
        <div class="project-option" data-value="Palma">
          <div class="project-image-container">
            <img class="logo" src="/images/palma-logo.png" alt="Palma Logo" />
            <img class="main-image" src="/images/palma.jpg" alt="Palma" />
            <div class="project-overlay">
              <svg viewBox="0 0 24 24"
                ><polyline points="20 6 9 17 4 12"></polyline></svg
              >
            </div>
          </div>
          <div class="project-option-label">Palma</div>
        </div>

        <!-- 72 Carlyle -->
        <div class="project-option" data-value="72 Carlyle">
          <div class="project-image-container">
            <img
              class="logo"
              src="/images/72c-logo.png"
              alt="72 Carlyle Logo"
            />
            <img
              class="main-image"
              src="/images/72-carlyle.jpg"
              alt="72 Carlyle"
            />
            <div class="project-overlay">
              <svg viewBox="0 0 24 24"
                ><polyline points="20 6 9 17 4 12"></polyline></svg
              >
            </div>
          </div>
          <div class="project-option-label">72 Carlyle</div>
        </div>

        <!-- Future Project -->
        <div class="project-option" data-value="Future Project">
          <div class="project-image-container">
            <img
              class="logo"
              src="/images/lefferts.png"
              alt="Future Project Logo"
            />
            <img
              class="main-image"
              src="/images/11th.jpg"
              alt="Future Project"
            />
            <div class="project-overlay">
              <svg viewBox="0 0 24 24"
                ><polyline points="20 6 9 17 4 12"></polyline></svg
              >
            </div>
          </div>
          <div class="project-option-label">Future Project</div>
        </div>

        <!-- All -->
        <div class="project-option" data-value="All">
          <div class="project-image-container">
            <div class="all-grid">
              <img src="/images/72-park.jpg" alt="72 Park" />
              <img src="/images/palma.jpg" alt="Palma" />
              <img src="/images/72-carlyle.jpg" alt="72 Carlyle" />
              <img src="/images/11th.jpg" alt="Future Project" />
            </div>
            <div class="project-overlay">
              <svg viewBox="0 0 24 24"
                ><polyline points="20 6 9 17 4 12"></polyline></svg
              >
            </div>
          </div>
          <div class="project-option-label">All</div>
        </div>
      </div>

      <input type="hidden" name="favorite_project" id="favorite_project" />
      <button type="submit">Submit</button>
    </form>

    <div id="thank-you" class="hidden fade-in">
      Thank you for your submission!
    </div>

    <div id="qr-code" class="hidden fade-in">
      <p>Follow us on Instagram!</p>
      <img
        src="https://storage2.me-qr.com/qr/268971104.png?v=1761774405"
        alt="Instagram QR Code"
      />
    </div>
  </div>

  <script>
    const form = document.getElementById("submission-form");
    const thankYou = document.getElementById("thank-you");
    const qr = document.getElementById("qr-code");
    const favoriteProjectInput = document.getElementById("favorite_project");

    let selectedProject = null;

    document.querySelector(".projects").addEventListener("click", (e) => {
      const option = e.target.closest(".project-option");
      if (!option) return;
      selectedProject = option.dataset.value;
      favoriteProjectInput.value = selectedProject;

      document
        .querySelectorAll(".project-image-container")
        .forEach((el) => el.classList.remove("selected"));
      option
        .querySelector(".project-image-container")
        .classList.add("selected");
    });

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      if (!selectedProject) {
        alert("Please select a favorite project.");
        return;
      }

      form.classList.add("hidden");
      thankYou.classList.remove("hidden");

      setTimeout(() => {
        thankYou.classList.add("hidden");
        qr.classList.remove("hidden");

        setTimeout(() => {
          qr.classList.add("hidden");
          form.reset();
          selectedProject = null;
          favoriteProjectInput.value = "";
          document
            .querySelectorAll(".project-image-container")
            .forEach((el) => el.classList.remove("selected"));
          form.classList.remove("hidden");
        }, 8000);
      }, 1500);
    });
  </script>
</Layout>
